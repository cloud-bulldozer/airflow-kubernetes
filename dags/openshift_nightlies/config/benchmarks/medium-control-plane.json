{
    "benchmarks": [
        {
            "name": "baseline",
            "workload": "baseline-performance",
            "command": "./baseline_perf.sh"            
        },      
        {
            "name": "node-density",
            "workload": "kube-burner",
            "command": "WORKLOAD=node-density ./run.sh",
            "env": {
                "PODS_PER_NODE": "250",
                "NODE_COUNT": "120",
                "JOB_TIMEOUT": "18000",
                "QPS": "20",
                "BURST": "20",
                "STEP_SIZE": "30s",
                "LOG_LEVEL": "info",
                "LOG_STREAMING": "true",
                "CLEANUP_WHEN_FINISH": "true",
                "CLEANUP": "true",
                "MUST_GATHER_EACH_TASK": "true"
            }
        },
        {
            "name": "node-density-heavy",
            "workload": "kube-burner",
            "command": "WORKLOAD=node-density-heavy ./run.sh",
            "env": {
                "PODS_PER_NODE": "100",
                "NODE_COUNT": "120",
                "JOB_TIMEOUT": "18000",
                "QPS": "20",
                "BURST": "20",
                "STEP_SIZE": "30s",
                "LOG_LEVEL": "info",
                "LOG_STREAMING": "true",
                "CLEANUP_WHEN_FINISH": "true",
                "CLEANUP": "true",
                "MUST_GATHER_EACH_TASK": "true"
            }
        },
        {
            "name": "cluster-density",
            "workload": "kube-burner",
            "command": "WORKLOAD=cluster-density ./run.sh",
            "env": {
                "JOB_ITERATIONS": "1000",
                "JOB_TIMEOUT": "18000",
                "STEP_SIZE": "30s",
                "QPS": "20",
                "BURST": "20",
                "LOG_LEVEL": "info",
                "LOG_STREAMING": "true",
                "CLEANUP_WHEN_FINISH": "true",
                "CLEANUP": "true",
                "MUST_GATHER_EACH_TASK": "true"
            }
        },
        {
            "name": "load-cluster-preupgrade",
            "workload": "kube-burner",
            "command": "WORKLOAD=cluster-density ./run.sh",
            "env": {
                "JOB_ITERATIONS": "1000",
                "JOB_TIMEOUT": "18000",
                "STEP_SIZE": "30s",
                "QPS": "20",
                "BURST": "20",
                "LOG_LEVEL": "info",
                "LOG_STREAMING": "true",
                "CLEANUP_WHEN_FINISH": "false",
                "CLEANUP": "true"
            }
        },
        {
            "name": "upgrades",
            "workload": "upgrade-perf",
            "command": "./run_upgrade_fromgit.sh",
            "env": {
                "LATEST": "true",
                "CHANNEL": "nightlies",
                "TIMEOUT": "400",
                "POLL_INTERVAL": "10"
            }
        }
    ]
}

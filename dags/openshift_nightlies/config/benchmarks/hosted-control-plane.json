{
    "benchmarks": [
        {
            "name": "baseline",
            "workload": "baseline-performance",
            "command": "./baseline_perf.sh"            
        },      
        {
            "name": "node-density",
            "workload": "kube-burner",
            "command": "./run_nodedensity_test_fromgit.sh",
            "env": {
                "PODS_PER_NODE": "100",
                "NODE_COUNT": "3",
                "JOB_TIMEOUT": "18000",
                "QPS": "20",
                "BURST": "20",
                "STEP_SIZE": "30s",
                "METRICS_PROFILE": "metrics.yaml",
                "LOG_LEVEL": "info",
                "LOG_STREAMING": "true",
                "CLEANUP_WHEN_FINISH": "true",
                "CLEANUP": "true",
                "MUST_GATHER_EACH_TASK": "true"
            }
        },
        {
            "name": "node-density-heavy",
            "workload": "kube-burner",
            "command": "./run_nodedensity-heavy_test_fromgit.sh",
            "env": {
                "PODS_PER_NODE": "100",
                "NODE_COUNT": "3",
                "JOB_TIMEOUT": "18000",
                "QPS": "20",
                "BURST": "20",
                "STEP_SIZE": "30s",
                "METRICS_PROFILE": "metrics.yaml",
                "LOG_LEVEL": "info",
                "LOG_STREAMING": "true",
                "CLEANUP_WHEN_FINISH": "true",
                "CLEANUP": "true",
                "MUST_GATHER_EACH_TASK": "true"
            }
        },
        {
            "name": "cluster-density",
            "workload": "kube-burner",
            "command": "./run_clusterdensity_test_fromgit.sh",
            "env": {
                "JOB_ITERATIONS": "100",
                "JOB_TIMEOUT": "18000",
                "STEP_SIZE": "30s",
                "QPS": "20",
                "BURST": "20",
                "METRICS_PROFILE": "metrics-aggregated.yaml",
                "LOG_LEVEL": "info",
                "LOG_STREAMING": "true",
                "CLEANUP_WHEN_FINISH": "true",
                "CLEANUP": "true",
                "MUST_GATHER_EACH_TASK": "true"
            }
        }
    ]
}

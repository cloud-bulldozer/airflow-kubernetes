{
    "benchmarks": [
        {
            "name": "baseline",
            "workload": "baseline-performance",
            "command": "./baseline_perf.sh",
            "env": {
                "STEP_SIZE": "60s",
                "HYPERSHIFT": "true",
                "METRICS_PROFILE": "metrics-profiles/hypershift-metrics.yaml"
            }       
        },      
        {
            "name": "node-density",
            "workload": "kube-burner",
            "command": "./run.sh",
            "env": {
                "WORKLOAD": "node-density",
                "PODS_PER_NODE": "245",
                "NODE_COUNT": "24",
                "JOB_TIMEOUT": "18000",
                "QPS": "20",
                "BURST": "20",
                "STEP_SIZE": "60s",
                "HYPERSHIFT": "true",
                "METRICS_PROFILE": "metrics-profiles/hypershift-metrics.yaml",
                "LOG_LEVEL": "info",
                "LOG_STREAMING": "true",
                "CLEANUP_WHEN_FINISH": "true",
                "CLEANUP": "true",
                "MUST_GATHER_EACH_TASK": "true"
            }
        },
        {
            "name": "node-density-heavy",
            "workload": "kube-burner",
            "command": "./run.sh",
            "env": {
                "WORKLOAD": "node-density-heavy",
                "PODS_PER_NODE": "245",
                "NODE_COUNT": "24",
                "JOB_TIMEOUT": "18000",
                "QPS": "20",
                "BURST": "20",
                "STEP_SIZE": "60s",
                "HYPERSHIFT": "true",
                "METRICS_PROFILE": "metrics-profiles/hypershift-metrics.yaml",
                "LOG_LEVEL": "info",
                "LOG_STREAMING": "true",
                "CLEANUP_WHEN_FINISH": "true",
                "CLEANUP": "true",
                "MUST_GATHER_EACH_TASK": "true"
            }
        },
        {
            "name": "cluster-density",
            "workload": "kube-burner",
            "command": "./run.sh",
            "env": {
                "WORKLOAD": "cluster-density",
                "JOB_ITERATIONS": "500",
                "JOB_TIMEOUT": "18000",
                "STEP_SIZE": "60s",
                "HYPERSHIFT": "true",
                "METRICS_PROFILE": "metrics-profiles/hypershift-metrics.yaml",
                "QPS": "20",
                "BURST": "20",
                "LOG_LEVEL": "info",
                "LOG_STREAMING": "true",
                "CLEANUP_WHEN_FINISH": "true",
                "CLEANUP": "true",
                "MUST_GATHER_EACH_TASK": "true"
            }
        }
    ]
}
